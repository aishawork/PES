
@{
    ViewBag.Title = "Part1";
    <script>
    $(document).ready(function () {
        var apiBaseUrl = "http://localhost:15787/";
        $('#btnGetData').click(function () {
            $.ajax({
                url: apiBaseUrl + 'api/Participant',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var $table = $('<table/>').addClass('table table-responsive table-striped table-bordered');
                    var $header = $('<thead/>').html('<tr><th>name</th><th>evaluation</th></tr>');
                    $table.append($header);
                    $.each(data, function (i, val) {
                        var $row = $('<tr/>');
                        $row.append($('<td/>').html(val.name  ));
                        $row.append($('<td/>').html(val.evaluation));
                        $table.append($row);
                    });
                    $('#updatePanel').html($table);
                },
                error: function () {
                    alert('Error!');
                }
            });
        });
    });
    </script>
}

<h2>Part1</h2>

